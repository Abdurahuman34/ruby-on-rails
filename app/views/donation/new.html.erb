<h1>Make a Donation</h1>

<%= form_with(model: @donation, url: donations_path, method: 'post', local: true, id: 'donation-form') do |form| %>

    
  <div class="field">
    #first name already exists
    <%= form.label :first_name %>
    <%= form.text_area :first_name %>
  </div>
   #last name already exists
  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_area :last_name %>
  </div>

    # New fields for email and amount 
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: 'form-control' %>
  </div>

  <!-- Card and error divs wrapped in card-container -->
  <div id="card-container">
    <div id="card-element" class="form-control"></div>
    <div id="card-errors" role="alert"></div>
  </div>

  <button id="donate-button" class="btn btn-primary">Donate</button>
<% end %>
